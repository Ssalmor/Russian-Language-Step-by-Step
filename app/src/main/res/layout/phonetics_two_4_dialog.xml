<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/explanationCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <TextView
            android:id="@+id/tv1"
            style="@style/titleExplanationText"
            android:text="@string/remember"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv2"
            style="@style/sectionExplanationText"
            android:text="@string/reading_rule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

        <TextView
            android:id="@+id/tv3"
            style="@style/sectionExplanationText"
            android:text="@string/ach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2"/>

        <TextView
            android:id="@+id/tv4"
            style="@style/sectionExplanationText"
            android:text="@string/hard_ach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv5"
            app:layout_constraintTop_toBottomOf="@id/tv3"/>

        <TextView
            android:id="@+id/tv5"
            style="@style/sectionExplanationText"
            android:text="@string/soft_ach"
            app:layout_constraintStart_toEndOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv3"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/ball"
            app:layout_constraintEnd_toStartOf="@id/iv2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintBottom_toTopOf="@id/line"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/daughter"
            app:layout_constraintStart_toEndOf="@id/iv1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv5"
            app:layout_constraintBottom_toTopOf="@id/line"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_button"
            style="@style/confirmationButtons"
            android:text="@string/clearText"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>